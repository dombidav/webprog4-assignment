{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.component.html"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "eslint:recommended"
      ],
      "rules": {
        "semi": [
          "error",
          "never"
        ],
        "quotes": [
          "error",
          "single",
          { "avoidEscape": true }
        ],
        "eqeqeq": [
          "error",
          "smart"
        ],
        "comma-spacing": [
          "error",
          {
            "before": false,
            "after": true
          }
        ],
        "array-bracket-spacing": [
          "error",
          "always"
        ],
        "object-curly-spacing": [
          "error",
          "always"
        ],
        "curly": [
          "error",
          "multi-or-nest",
          "consistent"
        ],
        "space-infix-ops": [
          "error",
          {
            "int32Hint": false
          }
        ],
        "quote-props": [
          "error",
          "consistent-as-needed",
          {
            "keywords": true,
            "numbers": true
          }
        ],
        "dot-notation": "error",
        "no-await-in-loop": "error",
        "@typescript-eslint/semi": "off",
        "@angular-eslint/no-output-on-prefix": "off",
        "no-unexpected-multiline": "error",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
          "error"
        ],
        "no-undef": "off",
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-class-suffix": "off",
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {}
    }
  ]
}
